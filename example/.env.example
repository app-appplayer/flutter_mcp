# Flutter MCP Environment Variables
# Copy this file to .env and modify values as needed

# Async/Retry Configuration
MCP_ASYNC_DEFAULT_MAX_RETRIES=5
MCP_ASYNC_DEFAULT_INITIAL_DELAY=1000
MCP_ASYNC_DEFAULT_JITTER_RANGE=100
MCP_ASYNC_DEFAULT_BACKOFF_FACTOR=2.5

# Memory Management
MCP_MEMORY_MONITORING_INTERVAL=60000
MCP_MEMORY_MAX_READINGS=20
MCP_MEMORY_DEFAULT_THRESHOLD_MB=512
MCP_MEMORY_INITIAL_SIMULATION_MB=150
MCP_MEMORY_GC_PROBABILITY=0.3
MCP_MEMORY_GC_HINT_ARRAY_SIZE=20000

# Batch Processing
MCP_BATCH_DEFAULT_MAX_SIZE=100
MCP_BATCH_DEFAULT_MAX_WAIT_TIME=200
MCP_BATCH_DEFAULT_MAX_CONCURRENT=5
MCP_BATCH_DEFAULT_RETRY_ENABLED=true
MCP_BATCH_DEFAULT_MAX_RETRIES=3
MCP_BATCH_EXPONENTIAL_BACKOFF_BASE=200

# Background Processing
MCP_BACKGROUND_MAX_CONSECUTIVE_ERRORS=10
MCP_BACKGROUND_DEFAULT_INTERVAL=120000
MCP_BACKGROUND_FLUSH_DELAY=50

# Health Monitoring
MCP_HEALTH_DEFAULT_CHECK_INTERVAL=60000
MCP_HEALTH_CRITICAL_CHECK_INTERVAL=15000

# Scheduler
MCP_SCHEDULER_TIMER_INTERVAL=5000
MCP_SCHEDULER_MAX_HISTORY_SIZE=200

# Object Pool
MCP_POOL_DEFAULT_MAX_SIZE=200
MCP_POOL_TRIM_THRESHOLD=20

# Semantic Cache
MCP_CACHE_DEFAULT_MAX_SIZE=500
MCP_CACHE_DEFAULT_TTL=7200000
MCP_CACHE_DEFAULT_SIMILARITY_THRESHOLD=0.9

# iOS Notifications
MCP_IOS_MAX_CONCURRENT_NOTIFICATIONS=128

# Resource Manager
MCP_RESOURCE_PRIORITY_HIGH=400
MCP_RESOURCE_PRIORITY_MEDIUM=250
MCP_RESOURCE_PRIORITY_DEFAULT=150
MCP_RESOURCE_PRIORITY_LOW=75

# Circuit Breaker
MCP_CIRCUIT_BREAKER_HALF_OPEN_SUCCESS_THRESHOLD=2

# Performance Monitoring
MCP_PERFORMANCE_UPDATE_INTERVAL=2000
MCP_PERFORMANCE_MAX_HISTORY_SIZE=600
MCP_PERFORMANCE_THRESHOLDS={"cpu.usage":90.0,"memory.usage":85.0,"error.rate":10.0,"response.time":2000.0}

# OAuth
MCP_OAUTH_AUTHORIZATION_TIMEOUT=600000
MCP_OAUTH_FLOW_EXPIRY_TIME=900000
MCP_OAUTH_DEFAULT_REDIRECT_URI=myapp://oauth/callback
MCP_OAUTH_PKCE_ENABLED=true

# Web Storage
MCP_WEB_STORAGE_USE_LOCAL_STORAGE=true
MCP_WEB_STORAGE_PREFIX=myapp_
MCP_WEB_STORAGE_STORAGE_VERSION=2

# Logging
MCP_LOGGING_DEFAULT_LEVEL=debug
MCP_LOGGING_ENABLE_FILE_LOGGING=true
MCP_LOGGING_MAX_LOG_FILE_SIZE=20971520

# Network
MCP_NETWORK_DEFAULT_TIMEOUT=60000
MCP_NETWORK_MAX_REDIRECTS=10
MCP_NETWORK_ENABLE_PROXY=false